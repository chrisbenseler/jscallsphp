<html>
<head>
<script type="application/javascript" src="../engine.js"></script>
<script type="application/javascript" src="../JSCallsPHP.js.php"></script>
<script type="application/javascript">
	
	function getAllUsers() {
		crud.getAllUsers(function(users) {
			var list = document.getElementById("results");
			list.innerHTML = "";
			for( var i=0; i<users.length; i++) {
				var li = document.createElement("li");
				li.innerHTML = users[i].name + "; e-mail: " + users[i].email + "; fone: " + users[i].phone;
				list.appendChild(li);
			}
		});
	}
	

</script>
</head>
<body>
<h1>JS Calls PHP</h1>
<ul>
	<li><a href="#" onClick="getAllUsers(); return false;">ver todos usuarios</a></li>
</ul>


<div>
<h3>Resultados da consulta:</h3>
<ul id="results">
	
</ul>
</div>
</body>
</html>